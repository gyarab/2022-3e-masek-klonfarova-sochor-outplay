<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#121212"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/qrCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:minWidth="800px"
        android:minHeight="800px"
        app:srcCompat="?android:attr/galleryItemBackground" />

    <Button
        android:id="@+id/inviteContinue"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="@string/go"
        app:cornerRadius="8dp" />

    <RelativeLayout
        android:id="@+id/player1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/qrCode"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="7dp"
        android:background="@drawable/item_bg">

        <Button
            android:id="@+id/player1button"
            android:layout_width="145dp"
            android:layout_height="61dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:text="@string/change"
            app:cornerRadius="12dp" />

        <TextView
            android:id="@+id/player1name"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/player1button"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="TextView"
            android:textSize="30sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/player2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/player1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="7dp"
        android:background="@drawable/item_bg"
        android:visibility="invisible">

        <Button
            android:id="@+id/player2button"
            android:layout_width="145dp"
            android:layout_height="61dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:text="@string/change"
            app:cornerRadius="12dp" />

        <TextView
            android:id="@+id/player2name"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/player2button"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="TextView"
            android:textSize="30sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/player3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/player2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="7dp"
        android:background="@drawable/item_bg"
        android:visibility="invisible">

        <Button
            android:id="@+id/player3button"
            android:layout_width="145dp"
            android:layout_height="61dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:text="@string/change"
            app:cornerRadius="12dp" />

        <TextView
            android:id="@+id/player3name"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/player3button"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="TextView"
            android:textSize="30sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/player4"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/player3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="7dp"
        android:background="@drawable/item_bg"
        android:visibility="invisible">

        <Button
            android:id="@+id/player4button"
            android:layout_width="145dp"
            android:layout_height="61dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:text="@string/change"
            app:cornerRadius="12dp" />

        <TextView
            android:id="@+id/player4name"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/player4button"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="TextView"
            android:textSize="30sp" />

    </RelativeLayout>
</RelativeLayout>